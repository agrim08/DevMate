### --- USER & FEED APIS ---

# @name getFeed
GET {{baseUrl}}/feed?page=1&limit=10

###

# @name getPendingRequests
GET {{baseUrl}}/user/requests/pending

###

# @name getConnections
GET {{baseUrl}}/user/connections

###


### --- REQUEST APIS ---

# replace :toUserId with an actual user id from the feed
# status can be "interested" or "ignored"
# @name sendRequest
POST {{baseUrl}}/request/send/interested/670000000000000000000001

###

# replace :requestId with an actual request id
# status can be "accepted" or "rejected"
# @name reviewRequest
POST {{baseUrl}}/request/review/accepted/670000000000000000000002

###


### --- CHAT APIS ---

# replace :targetUserId with the ID of a connected user
# @name getChat
GET {{baseUrl}}/chat/670000000000000000000001

###


### --- PAYMENT APIS ---

# @name createPaymentOrder
POST {{baseUrl}}/payment/create-order
Content-Type: application/json

{
    "membershipType": "emerald"
}

###

# @name verifyPremium
GET {{baseUrl}}/premium/verify

###


### --- UPLOAD APIS ---

# @name getUploadUrl
# fileType can be image/jpeg, image/png, or image/webp
GET {{baseUrl}}/upload/presigned-url?fileType=image/jpeg

###

# @name saveProfilePicture
# Replace fileKey with the key returned by getUploadUrl
POST {{baseUrl}}/upload/save-profile-picture
Content-Type: application/json

{
    "fileKey": "profiles/USER_ID/photo-TIMESTAMP.jpg"
}

